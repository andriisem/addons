<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <menuitem
            id="holacracy_menu_root"
            name="Holacracy"
            web_icon="holacracy,static/description/icon.png"
            groups="base.group_user"
            sequence="6"/>



    <record id="view_holacracy_form" model="ir.ui.view">
        <field name="name">holacracy.circles.form</field>
        <field name="model">holacracy.circles</field>
        <field name="arch" type="xml">
            <form string="Holacracy">
                <sheet string="Task">
                    <div class="oe_title">
                        <h1 class="o_row">
                            <field name="name" class="o_task_name" placeholder="Circle Title..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="lead_link"/>
                            <field name="rep_link"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="purpose"/>
                            <field name="notes"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Members">
                            <field name="circles_role_ids">
                                <tree editable="top">
                                    <field name="name"/>
                                    <field name="type_role"/>
                                    <field name="employee_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Sub Circles">
                            <field name="child_ids" mode="kanban">
                                <kanban class="o_kanban_mobile">
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form ">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <strong><field name="name" string="Project Name"/></strong>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-8">
                                                        <field name="lead_link" string="Lead Link"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Tention">
                            <field name="tention_ids">
                                <tree editable="top">
                                    <field name="task_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="holacracy_circles_view_kanban" model="ir.ui.view">
        <field name="name">holacracy.circles.kanban</field>
        <field name="model">holacracy.circles</field>
        <field name="domain_force">[('parent_id', '=', False)]</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form ">
                            <div class="row">
                                <div class="col-12">
                                    <strong><field name="name" string="Project Name"/></strong>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <field name="lead_link" string="Lead Link"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="open_view_holacracy_all" model="ir.actions.act_window">
        <field name="name">Holacracy</field>
        <field name="res_model">holacracy.circles</field>
        <field name="view_type">form</field>
        <field name="domain">[('parent_id', '=', False)]</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="holacracy_circles_view_kanban"/>
        <field name="target">main</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new circles
            </p>
        </field>
    </record>

    <menuitem action="open_view_holacracy_all" id="menu_projects" name="Holacracy" parent="holacracy_menu_root" sequence="1"/>

</odoo>