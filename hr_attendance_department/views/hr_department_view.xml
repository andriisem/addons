<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="hr_department_view_kanban" model="ir.ui.view">
        <field name="name">hr.department.kanban</field>
        <field name="model">hr.department.restaurant</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban class="o_hr_department_attendance_kanban" create="false">
                <field name="id"/>
                <field name="name"/>

                <templates>
                    <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <div class="oe_kanban_details">
                            <div id="textbox">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>